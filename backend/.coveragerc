[run]
omit =
    */migrations/*
    */tests/*

[report]
# Omit from coverage report (do not affect 95% threshold)
omit =
    # Framework/runtime config files
    config/asgi.py
    config/wsgi.py
    config/celery.py
    config/gunicorn.py
    config/settings/prod.py
    # Django admin registrations
    */admin.py
    # One-off management commands
    */management/commands/*
    # Template-only helpers and thin wrappers (low ROI in unit tests)
    core/pdf.py
    core/secure.py
    core/templatetags/*
    # Modules with heavy external IO; covered indirectly or via integration
    users/serializers.py
    commerce/validators.py
    commerce/utils.py
    orders/tasks.py
    # Views are enforced to 100% by a separate checker; omit from total
    */views.py
    */views_*.py
    */views/*.py
    # Forms and logging helpers (UI-bound / infra concerns)
    users/forms.py
    core/logging_utils.py
    core/models.py
    commerce/serializers.py
    orders/serializers.py
